{
	"name": "timefox-application-client",
	"version": "0.1.0",
	"description": "Timefox Application Entity Gateways",
	"main": "dist/",
	"repository": {
		"type": "git",
		"url": "git@bitbucket.org:enbock-tecfox/timefox-application.git"
	},
	"author": "Endre Bock <endre.bock@tecfox.eu>",
	"license": "MIT",
	"devDependencies": {
		"@testing-library/jest-dom": "^5.16.2",
		"@types/jest": "^27.4.0",
		"@types/node": "^17.0.34",
		"jest": "^27.4.7",
		"jest-mock-extended": "^2.0.4",
		"ts-jest": "^27.1.3",
		"typescript": "^4.6.4",
		"rimraf": "3.0.2",
		"@apidevtools/openapi-schemas": "2.1.0",
		"@openapitools/openapi-generator-cli": "2.5.1",
		"json-schema-generator": "2.0.6",
		"typescript-require": "0.3.0",
		"typescript-json-schema": "0.53.0"
	},
	"scripts": {
		"test": "jest",
		"compile-json-generator": "tsc -p .",
		"generate-json-schema": "node dist/timefox-json.js --search-dir=src/Record --search-classes=Entity --symbols=Entity,TimeRecord --outfile=timefox-client.json",
		"clean-generated-sources": "rimraf -rf generated-sources/timefoxapi/v1.0/",
		"generate-client-jersey": "openapi-generator-cli generate --generator-key v3.0 -i ../src/main/resources/api/v1.0/client-na.yaml -g jaxrs-jersey -o generated-sources/timefoxapi/v1.0/jersey",
		"generate-client-spring": "openapi-generator-cli generate --generator-key v3.0 -i ../src/main/resources/api/v1.0/client-na.yaml -g spring -o generated-sources/timefoxapi/v1.0/spring",
		"generate-client-ruby": "openapi-generator-cli generate --generator-key v3.0 -i ../src/main/resources/api/v1.0/client-na.yaml -g ruby -o generated-sources/timefoxapi/v1.0/ruby",
		"generate-client-nodejs": "openapi-generator-cli generate --generator-key v3.0 -i ../src/main/resources/api/v1.0/client-na.yaml -g graphql-nodejs-express-server -o generated-sources/timefoxapi/v1.0/graphql"
	},
	"jest": {
		"roots": [
			"."
		],
		"collectCoverage": true,
		"verbose": true,
		"collectCoverageFrom": [
			"**/*.ts"
		],
		"coveragePathIgnorePatterns": [
			"TestHelper.ts"
		],
		"preset": "ts-jest",
		"testEnvironment": "jsdom",
		"testRegex": "\\.test\\.ts$",
		"moduleFileExtensions": [
			"js",
			"ts"
		],
		"coverageThreshold": {
			"global": {
				"branches": 90
			}
		},
		"modulePathIgnorePatterns": [
			".idea"
		],
		"setupFilesAfterEnv": [
			"<rootDir>/setupTests.ts"
		]
	}
}
